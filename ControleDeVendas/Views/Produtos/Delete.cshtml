@model ControleDeVendas.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Confirmar exclusão</h2>

<div class="alert alert-warning">
    Tem certeza que deseja <strong>excluir</strong> o produto <strong>@Model.Nome</strong> (código @Model.Id)?
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Valor</dt>
            <dd class="col-sm-9">@((decimal)Model.Valor).ToString("C")</dd>

            <dt class="col-sm-3">Ativo</dt>
            <dd class="col-sm-9">@(Model.Ativo ? "Sim" : "Não")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
