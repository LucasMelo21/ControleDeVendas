@model IEnumerable<ControleDeVendas.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h2>Produtos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Produto</a>
</p>

@if (TempData["Success"] is string ok)
{
     <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string er)
{
     <div class="alert alert-danger">@er</div>
}

<table class="table table-striped table-sm align-middle">
    <thead>
        <tr>
            <th>Nome</th>
            <th class="text-end">Valor</th>
            <th class="text-center">Ativo</th>
            <th style="width:220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nome</td>
                <td class="text-end">@((decimal)p.Valor).ToString("C")</td>
                <td class="text-center">
                    @if (p.Ativo)
                    {
                        <span class="badge bg-success">Sim</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Não</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
