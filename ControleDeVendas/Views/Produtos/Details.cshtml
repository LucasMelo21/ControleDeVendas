@model ControleDeVendas.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h2>Detalhes do Produto</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Código</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Valor</dt>
            <dd class="col-sm-9">@((decimal)Model.Valor).ToString("C")</dd>

            <dt class="col-sm-3">Ativo</dt>
            <dd class="col-sm-9">@(Model.Ativo ? "Sim" : "Não")</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
